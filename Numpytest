import numpy as np
print('work aana seri ilana avlotha')

# Create a 1D array
array_1d = np.array([1, 2, 3, 4, 5])
print("1D Array:", array_1d)

# Create a 2D array
array_2d = np.array([[1, 2, 3], [4, 5, 6]])
print("2D Array:\n", array_2d)

# Array operations
array_sum = array_1d + 10
print("Array after addition:", array_sum)

array_product = array_1d * 2
print("Array after multiplication:", array_product)

# Array slicing
slice_array = array_1d[1:4]
print("Sliced Array:", slice_array)
